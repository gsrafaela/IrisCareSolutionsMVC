@model Lembrete

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastro de Lembrete</h1>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}
<form asp-action="cadastrar">
    <div class="mb-3">
        <label asp-for="Nome">Nome do Lembrete</label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Validade">Validade do Lembrete</label>
        <input asp-for="Validade" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Observacao">Observações</label>
        <input asp-for="Observacao" class="form-control" />
    </div>
    <button class="btn btn-primary">Cadastrar</button>
</form>

