@model Lembrete

@{
    ViewData["Title"] = "Cadastrar";
}

<style>
    body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .cover {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .max-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .cadastroLembreteTitulo {
        color: #89ffdb;
    }

    .listaCadastroLembrete {
        color: #ffffff;
    }

    .botaoCadastroLembrete {
        background-color: #89ffdb;
    }
    
    
    </style>

<div class="cover">
    <img class="max-img" src="~/assets/Background.png" alt="Imagem de background" />
</div>

<h1 class="cadastroLembreteTitulo">Cadastro de Lembrete</h1>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}
<form asp-action="cadastrar">
    <div class="mb-3 listaCadastroLembrete">
        <label asp-for="Nome">Nome do Lembrete</label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="mb-3 listaCadastroLembrete">
        <label asp-for="Validade">Validade do Lembrete</label>
        <input asp-for="Validade" class="form-control" />
    </div>
    <div class="mb-3 listaCadastroLembrete">
        <label asp-for="Observacao">Observações</label>
        <input asp-for="Observacao" class="form-control" />
    </div>
    <button class="btn btn mt-3 botaoCadastroLembrete">Cadastrar</button>
</form>

