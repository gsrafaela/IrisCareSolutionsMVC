@model List<Lembrete>
@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .cover {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .max-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .tituloLembrete {
        color: #89ffdb !important;
    }

    .listaLembrete {
        color: #ffffff;
    }

</style>

<div class="cover">
    <img class="max-img" src="~/assets/Background.png" alt="Imagem de background" />
</div>

<h1 class="tituloLembrete">Lembretes</h1>

<table class="table listaLembrete">
    <tr>
        <th>Nome</th>
        <th>Validade do Lembrete</th>
        <th>Observações</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Validade.ToShortDateString()</td>
            <td>@item.Observacao</td>
        </tr>
    }
</table>


