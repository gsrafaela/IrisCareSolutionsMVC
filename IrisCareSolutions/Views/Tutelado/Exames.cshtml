@model Exame

@{
    ViewData["Title"] = "Exames";
}

<h2>Tutelado: @ViewBag.Tutelado.Nome</h2>
<hr />
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}
<div class="row">
    <div class="col-6">
        <h3>Agendar</h3>
        <form asp-action="agendar">
    <input type="hidden" asp-for="TuteladoId" 
                    value="@ViewBag.Tutelado.TuteladoId" />
    <div class="mb-3"> 
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Data"></label>
        <input asp-for="Data" class="form-control" />
    </div>
    <button class="btn btn-success">Agendar</button>
</form>
    </div>
    <div class="col-6">
        <h3>Exames</h3>
        <table class="table">
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Data</th>
            </tr>
            @foreach (var item in ViewBag.exames)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Descricao</td>
                    <td>@item.Data</td>
                </tr>
            }
        </table>
    </div>
</div>

