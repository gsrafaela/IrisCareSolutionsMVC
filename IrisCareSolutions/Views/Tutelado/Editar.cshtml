@model Tutelado
@{
    ViewData["Title"] = "Editar";
}

<style>
    body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .cover {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .max-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>

<div class="cover">
    <img class="max-img" src="~/assets/Background.png" alt="Imagem de background" />
</div>

<h1>Atualizar o tutelado: @Model.Nome</h1>

<form asp-action="editar">
    <partial name="_Form" />
    <input asp-for="TuteladoId" />    
    <button class="btn btn-primary">Editar</button>
</form>

