
@{
    ViewData["Title"] = "Cadastrar";
}
<style>
    body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .cover {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .max-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .tituloNovoTutelado {
    color: #89ffdb;

    }
    
    </style>

<div class="cover">
    <img class="max-img" src="~/assets/Background.png" alt="Imagem de background" />
</div>

<h1 class="tituloNovoTutelado">Novo Tutelado</h1>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<form asp-action="cadastrar">

    <partial name="_Form" />

    <div class="mb-3">
        <button class="btn btn-outline-light">Cadastrar</button>
    </div>

</form>

