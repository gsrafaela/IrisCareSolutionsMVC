@{
    ViewData["Title"] = "Lembretes";
}
<style>
    body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .cover {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .max-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>

<div class="cover">
    <img class="max-img" src="~/assets/Background.png" alt="Imagem de background" />
</div>
@if (ViewBag.tutelado != null)
{
    <h1>@ViewBag.tutelado.Nome</h1>
    <hr />
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success">
            @TempData["msg"]
        </div>
    }
    <form class="row" asp-action="adicionar">
        <div class="col-4">
            <input type="hidden" name="TuteladoId" value="@ViewBag.tutelado.TuteladoId" />
            <select name="LembreteId" class="form-select" asp-items="@ViewBag.select">
                <option>Selecione</option>
            </select>
        </div>
        <button class="btn btn-success col-2">Adicionar</button>
    </form>

    <table class="table">
        <tr>
            <th>Nome</th>
            <th>Data Validade do Lembrete</th>
            <th>Observação</th>
        </tr>
        @foreach (var item in ViewBag.lembretes)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Validade.ToShortDateString()</td>
                <td>@item.Observacao</td>
            </tr>
        }
    </table>
}
else
{
    <p>Tutelado não encontrado.</p>
}
