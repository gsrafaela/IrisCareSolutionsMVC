@model List<IrisCareSolutions.Models.Exame>

<h2>Exames</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Data</th>
            <th>Resultado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exame in Model)
        {
            <tr>
                <td>@exame.ExameId</td>
                <td>@exame.Nome</td>
                <td>@exame.Descricao</td>
                <td>@exame.Data.ToShortDateString()</td>
                <td>
                    @if (!string.IsNullOrEmpty(exame.ResultadoFileName))
                    {
                        <a asp-action="Download" asp-route-id="@exame.ExameId">@exame.ResultadoFileName</a>
                    }
                    else
                    {
                        <span>No file</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@exame.ExameId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@exame.ExameId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@exame.ExameId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
